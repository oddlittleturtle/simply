{{!-- Layout --}}
{{!< default}}

{{!-- custom Styles For tag <body> --}}
{{#contentFor "special_body_class"}}has-cover is-head-transparent overflow-hidden{{/contentFor}}

{{#page}}

<article class="simply-hero-cover flex items-center justify-center relative min-h-screen py-24 bg-dark">
    {{!-- Featured Media - partials/components/media-cover.hbs --}}
    {{> "components/media-cover" background=feature_image has_gradient=true alt_title=title}}

    <div class="mx-auto max-w-740 px-4 p-24 z-3 text-white text-center">
        <h1 class="mb-6 text-5xl md:text-6xl tracking-wider animated fadeInUp">Under maintenance</h1>
        <div class="text-3xl md:text-32">
		<div class="mx-auto max-w-740 px-4 p-24 z-3 text-white text-center">
				<h2 class="mb-6 text-5xl md:text-6xl tracking-wider">We will return soon.</h2>
				
				<div class="col mb-8">
					<div class="pae-icon">
					<svg class="icon icon-turtle"><use xlink:href="#icon-turtle"></use></svg>
					</div>
					<h4 class="pae-title uppercase">ODD'S MODS</h4>
					<div class="pae-des"><p>Quality of life mods that make sense.</p></div>
					<a class="button is-light font-medium text-sm capitalize godo-tracking" 
						href="https://oddsmods.xyz" 
						data-event-label="oddsmods"
						target="_blank"
						rel="noopener noreferrer">
						<svg class="icon mr-2"><use xlink:href="#icon-xbox-brands"> <svg class="icon mr-2 icon-playstation-brands"><use xlink:href="#icon-playstation-brands"> <span class="pl-4">Download</span>
					</a>
				</div>
				<div class="col mb-8">
				<div class="pae-icon"><svg class="icon icon-glass"><use xlink:href="#icon-glass"></use>
				</svg></div>
				<h4 class="pae-title uppercase">JOIN THE DISCUSSION</h4>
				<div class="pae-des"><p>Ask questions, get help, learn load orders, report bugs, make suggestions, share screenshots and playthrough stories.</p>
				</div>
				<p>
				<a href="{{@site.url}}/discord/" 
					target="_blank"
					rel="noopener noreferrer"
					data-event-label="Discord"
					class="button is-light font-medium text-sm capitalize godo-tracking">
					<svg class="icon icon-discord"><use xlink:href="#icon-discord"> <span class="pl-4">Join Us!</span></a> 
					{{#if @site.twitter}}
						<a href="{{twitter_url}}" 
							target="_blank"
							rel="noopener noreferrer"
							data-event-action="Social"
							data-event-label="Twitter"
							class="button is-light font-medium text-sm capitalize godo-tracking">
							<svg class="icon icon-twitter"><use xlink:href="#icon-twitter"> <span class="pl-4">Follow us!</span>
						</a>
					{{/if}}
					</p>
				</div>
				
				
				
				<a class="button is-white is-outlined dark is-medium" href="https://to.oddsmods.xyz/FO4LOFrameworkTemplate"><svg class="icon mr-2"><use xlink:href="#icon-book"></use></svg> <span>Load Order Framework Template</span></a> 
				
			</div>
		</div>
		
		
    </div>

    {{!-- Social Media - partilas/widget/social-media.hbs --}}
    {{> "widget/social-media" class="absolute right-0 bottom-0 mr-8 mb-8 text-white z-2 flex-col hidden md:flex"}}
</article>

{{/page}}

			


